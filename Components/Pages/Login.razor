            <h2 class="text-center mb-4">Login</h2>
            <h5 class="mb-5 text-center">
                Don't have an account? <a href="/register">Create Account</a>
            </h5>

            <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>UserName</label>
                    <InputText @bind-Value="loginModel.username" type="text" class="input" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <InputText @bind-Value="loginModel.password" type="password" class="input" />
                </div>
                <div class="form-group">
                    <button type="submit" class="submit-btn">Login</button>
                </div>

              @*   <div class="form-group">
                    <a href="/forgotpassword">Forgot Password</a>
                </div> *@
            </EditForm>

            @if (!string.IsNullOrEmpty(message))
            {
                <p class="message">@message</p>
            }
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string message;
    int uid;
    private async Task HandleLogin()
    {
        try
        {
            var result = await LoginService.LoginAsync(loginModel);
            if (result.Contains("Invalid credentials"))
            {
                message = result;
                return;
            }
            if (result.Contains("Error"))
            {
                message = result;
                return;
            }
            message = "Login successful!";
            string token = null;
            if (token == null)
                token = result;

            Preferences.Set("authToken", token);

            AppUsageTracker.Start();
            desktopAutoCaptureService.Start();
            var handler = new JwtSecurityTokenHandler();
            var jwtToken = handler.ReadToken(token) as JwtSecurityToken;
            if (jwtToken != null)
            {
                var userIdClaim = jwtToken?.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value;

                if (int.TryParse(userIdClaim, out int userId))
                {
                    uid = userId;

                }
            }
            afkTrackerService.Start( uid);

            NavigationManager.NavigateTo("/users");
        }
        catch (Exception ex)
        {
            message = "Invalid Id or Password";
        }
    }


}

